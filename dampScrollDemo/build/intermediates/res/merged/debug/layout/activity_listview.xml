<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

       <com.dampscrolldemo.widget.DampScrollView
           android:id="@+id/dampScrollView"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:fillViewport="true"
           android:fadingEdge="none"
           android:scrollbars="none"
           android:layout_marginTop="-500px" >

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent" >
               
               <ImageView android:id="@+id/bg_Image"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:src="@drawable/all_bg"/>
               
               <com.dampscrolldemo.widget.NoScrollListView
                   android:id="@+id/noscroll_listview"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_below="@+id/bg_Image"
                   android:background="#FFFFFF"
                   android:layout_marginTop="-300px" />
                   
           </RelativeLayout>
       </com.dampscrolldemo.widget.DampScrollView>

</RelativeLayout>
